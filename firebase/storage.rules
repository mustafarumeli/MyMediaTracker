rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Sadece authenticated kullanıcılar upload edebilir
    match /media-posters/{userId}/{fileName} {
      // Okuma: authenticated kullanıcılar
      allow read: if request.auth != null;
      
      // Yazma: sadece kendi user ID'si altına
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024  // 5MB limit
                   && request.resource.contentType.matches('image/.*');  // Sadece image
      
      // Silme: sadece kendi dosyalarını
      allow delete: if request.auth != null 
                    && request.auth.uid == userId;
    }
  }
}

